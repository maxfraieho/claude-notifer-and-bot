modules = ["bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Claude Bot"

[[workflows.workflow]]
name = "Claude Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && TELEGRAM_BOT_USERNAME=DevClaude_bot ALLOWED_USERS=123456789 APPROVED_DIRECTORY=/home/runner/workspace/target_project TARGET_PROJECT_PATH=/home/runner/workspace/target_project SECURITY_FLEXIBLE_MODE=true CLAUDE_AVAILABILITY_ENABLED=false DEBUG=true LOG_LEVEL=INFO DEVELOPMENT_MODE=true DATABASE_URL=sqlite:////tmp/bot.db USE_SDK=true ENABLE_LOCALIZATION=true DEFAULT_LANGUAGE=en python -m src.main"

[workflows.workflow.metadata]
outputType = "console"
