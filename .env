# Telegram bot token from BotFather
TELEGRAM_BOT_TOKEN=your_actual_bot_token_here

# Enable Claude CLI availability monitoring
CLAUDE_AVAILABILITY_MONITOR=true

# List of Telegram chat_id for notifications (comma separated)
CLAUDE_AVAILABILITY_NOTIFY_CHAT_IDS=-1001234567890,123456789

# Check interval (seconds)
CLAUDE_AVAILABILITY_CHECK_INTERVAL=60

# DND window (don't send notifications from 23:00 to 08:00 Kyiv time)
CLAUDE_AVAILABILITY_DND_START=23:00
CLAUDE_AVAILABILITY_DND_END=08:00

# Number of consecutive successful checks to confirm availability
CLAUDE_AVAILABILITY_DEBOUNCE_OK_COUNT=2

# Path to target project inside container
TARGET_PROJECT_PATH=/app/target_project

# Additional settings (optional)
DEBUG=false
LOG_LEVEL=INFO