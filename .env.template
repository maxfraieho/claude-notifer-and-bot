# Claude Telegram Bot Configuration Template
# Copy this file to .env and fill in your values

# ===== TELEGRAM CONFIGURATION =====
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Your bot username (without @)
TELEGRAM_BOT_USERNAME=YOUR_BOT_USERNAME

# ===== AUTHENTICATION =====
# Telegram user IDs allowed to use the bot (comma-separated)
# Get your user ID by messaging @userinfobot
ALLOWED_USERS=YOUR_TELEGRAM_USER_ID

# Optional: Token-based authentication (advanced users)
# ENABLE_TOKEN_AUTH=true
# AUTH_TOKEN_SECRET=your_secret_key_here

# ===== DIRECTORY CONFIGURATION =====
# Directory path inside container (don't change)
APPROVED_DIRECTORY=/app/target_project
TARGET_PROJECT_PATH=/app/target_project

# ===== CLAUDE AVAILABILITY MONITORING =====
# Enable monitoring of Claude CLI availability
CLAUDE_AVAILABILITY_MONITOR=true

# Chat IDs to notify about availability issues (comma-separated)
# Use negative ID for groups/channels
CLAUDE_AVAILABILITY_NOTIFY_CHAT_IDS=YOUR_CHAT_ID_FOR_NOTIFICATIONS

# Check interval in seconds (default: 60)
CLAUDE_AVAILABILITY_CHECK_INTERVAL=60

# Do Not Disturb time window (24-hour format)
CLAUDE_AVAILABILITY_DND_START=23:00
CLAUDE_AVAILABILITY_DND_END=08:00
CLAUDE_AVAILABILITY_DEBOUNCE_OK_COUNT=2

# ===== RUNTIME CONFIGURATION =====
# Production settings
DEBUG=false
LOG_LEVEL=INFO
DEVELOPMENT_MODE=false

# Database location (use temp directory for persistence)
DATABASE_URL=sqlite:////tmp/bot.db

# Claude CLI mode (don't change - uses mounted .claude directory)
USE_SDK=false

# NOTE: No API key needed! Bot uses mounted claude-config directory
# which contains your authenticated Claude CLI session from ~/.claude